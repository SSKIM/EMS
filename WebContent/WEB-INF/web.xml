<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>dfs</display-name>
	
	<session-config>
		<session-timeout>360</session-timeout>
	</session-config>
	
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>mt.root</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/log4j.properties</param-value>
	</context-param>
	<context-param>
		<param-name>theme</param-name>
		<param-value>default</param-value>
	</context-param>
	<context-param>
		<param-name>fileDonwload</param-name>
		<param-value>D:/project/EMS/EMS/WebContent/common/file/download/</param-value>
	</context-param>
	<context-param>
		<param-name>fileUpload</param-name>
		<param-value>D:/project/EMS/EMS/WebContent/common\file/upload/</param-value>
	</context-param>
	<context-param>
		<param-name>errorPageXML</param-name>
		<param-value>/view/common/resultToXML.jsp</param-value>
	</context-param>
	<context-param>
		<param-name>errorPage</param-name>
		<param-value>/view/common/error.jsp</param-value>
	</context-param>
	<context-param>
		<param-name>sessionPage</param-name>
		<param-value>/view/common/returnPage.jsp?returnPage=index.do?method=loginForm</param-value>
	</context-param>

	<servlet>
		<servlet-name>mt</servlet-name>
		<servlet-class>com.mindtree.framework.web.FrontService</servlet-class>
		<init-param>
			<param-name>workflowPath</param-name>
			<param-value>D:/project/EMS/EMS/WebContent/WEB-INF/workflow/</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>fileDownload</servlet-name>
		<servlet-class>com.mindtree.framework.web.fileDownload</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>mt</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>fileDownload</servlet-name>
		<url-pattern>/fileDownload</url-pattern>
	</servlet-mapping>

	<resource-ref>
		<description>DataSource</description>
		<res-ref-name>jdbc/fmsMssqlDS</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
<!--
	<resource-ref>
		<description>DataSource</description>
		<res-ref-name>jdbc/fmsOracleDS</res-ref-name>
		<res-type>oracle.jdbc.pool.OracleDataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
-->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
